{
  "manifest_version": 3,
  "name": "WebTimeTracker",
  "version": "1.0",
  "description": "Track and categorize your web browsing time using AI",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["audio/goal-sound.mp3"],
    "matches": ["<all_urls>"]
  }]
} 